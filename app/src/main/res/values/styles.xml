<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">#E91E63</item>
        <item name="colorAccent">#8BC34A</item>
    </style>

    <style name="LargeTextView" parent="AppTheme">
        <item name="fontFamily">@font/iran_sans_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="NormalTextView" parent="AppTheme">
        <item name="fontFamily">@font/iran_sans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>